---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portafilio Profesional | Luis Javier Canan Corral - Desarrollador y Programador Web"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/Professional-Portfolio-by-Luii94/public/favicon.svg"
    />
    <!-- <meta name="generator" content={Astro.generator} /> -->
    <title>{title}</title>
  </head>
  <body class="grid place-content-center">
    <slot />
  </body>
</html>

<style is:global>
  :root {
  }

  *,
  ::after,
  ::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    scroll-behavior: smooth;
    color-scheme: dark light;
  }

  body {
    width: 100%;
    min-height: 100vh;
    /* display: grid; */
    /* place-content: center; */
    /* gap: 1rem; */
    color: white;
    /* font-size: 20px; */
  }

  main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  #about_me {
    border: 1px solid black;
  }

  .about {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  #footer {
    border-top: 1px solid black;
    width: 100%;
    height: 3rem;
    position: fixed;
    bottom: 0;
    text-align: center;
  }
</style>
