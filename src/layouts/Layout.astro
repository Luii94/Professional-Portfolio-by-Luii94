---
//TypeScript
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portafilio Profesional | Luis Javier Canan Corral - Programador y Desarrollador Web"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <meta name="generator" content={Astro.generator} /> -->
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
  }

	*, ::after, ::before {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }

	body {
		width: 100%;
		min-height: 100vh;
		display: grid;
		place-content: center;
	}
</style>
