---
//BLoque de JavaScript/TypeScript
import Layout from '../layouts/Layout.astro';
import AboutMe from '../components/About_me.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Portafolio Profesional">
	<main>
		<AboutMe />
		<Skills />
		<Projects />
		<Footer />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
